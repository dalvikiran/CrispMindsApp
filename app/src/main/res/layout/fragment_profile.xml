<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="profileViewModel"
            type="com.example.crispminds.view.dashboard.viewmodel.ProfileFragmentViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:alpha="0.3"
                    android:scaleType="fitXY"
                    android:src="@drawable/hugh" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:src="@drawable/hugh" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@{profileViewModel.userNameMutableLiveData}"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="@dimen/space_90"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/rounded_corners_with_white_backgraount"
                            android:paddingStart="@dimen/space_20"
                            android:paddingTop="@dimen/space_2"
                            android:paddingEnd="@dimen/space_30"
                            android:paddingBottom="@dimen/space_2"
                            android:text="200"
                            android:textColor="@color/colorOrange"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="@dimen/space_40"
                            android:layout_height="@dimen/space_40"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/space_3"
                            android:src="@drawable/ic_rewards" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Sessions"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrayLight" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share Videos"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrayLight" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subscribe Plan"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="47"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="47" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorGrayLight" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/kids"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_120"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginBottom="@dimen/space_10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/add_kid_layout">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/kids_members_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_120"
                            android:orientation="horizontal">

                            <include layout="@layout/profile_family_members_cell_layout" />

                            <include layout="@layout/profile_family_members_cell_layout" />

                            <include layout="@layout/profile_family_members_cell_layout" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/space_40"
                            android:layout_height="@dimen/space_40"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:onClick="@{()->profileViewModel.onShowAddKidsLayout()}"
                            android:src="@drawable/ic_keyboard_arrow_left_primary_24dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/add_kid_layout"
                        android:layout_width="@dimen/space_50"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/space_5"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="@{profileViewModel.addKidsLayoutVisibility? View.VISIBLE : View.GONE}">

                        <ImageView
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/space_5"
                            android:src="@drawable/ic_add_square_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_child"
                            android:textColor="@color/colorWhite"
                            android:textSize="9dp" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Family Members"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <!-- <androidx.recyclerview.widget.RecyclerView
                     android:id="@+id/profile_family_members_recycler_view"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/space_10"
                     android:layout_marginBottom="@dimen/space_10"
                     android:background="@color/colorGrayLight"
                     android:orientation="horizontal"
                     app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_120"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginBottom="@dimen/space_10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/add_family_member_layout">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/profile_family_members_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_10"
                            android:layout_marginBottom="@dimen/space_10"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_120"
                            android:orientation="horizontal">

                            <include layout="@layout/profile_family_members_cell_layout" />

                            <include layout="@layout/profile_family_members_cell_layout" />

                            <include layout="@layout/profile_family_members_cell_layout" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/space_40"
                            android:layout_height="@dimen/space_40"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:onClick="@{()-> profileViewModel.onShowAddFamilyMembersLayout()}"
                            android:src="@drawable/ic_keyboard_arrow_left_primary_24dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/add_family_member_layout"
                        android:layout_width="@dimen/space_50"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/space_5"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="@{profileViewModel.addFamilyMembersLayoutVisibility? View.VISIBLE : View.GONE}">

                        <ImageView
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/space_5"
                            android:src="@drawable/ic_add_square_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_family_member"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="9dp" />

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Offer Interested"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/profile_offers_interested_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginBottom="@dimen/space_10"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/profile_offer_interested_cell_layout" />

                    <include layout="@layout/profile_offer_interested_cell_layout" />

                    <include layout="@layout/profile_offer_interested_cell_layout" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</layout>