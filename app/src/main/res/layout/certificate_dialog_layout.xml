<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="certificateDto"
            type="com.example.crispminds.models.CertificationAndAwards" />
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:src="@color/colorPrimary"
            app:imageUrl="@{certificateDto.certification_and_awards_Pics.path}"
            />

        <ImageView
            android:id="@+id/close_click_image_view"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:src="@drawable/ic_close"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/space_5"/>

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/certifications_and_awards"
            android:textColor=""/>
-->
    </RelativeLayout>
</layout>
