<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".view.dashboard.fragments.RewardsFragment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_200"
                android:background="@color/colorBlue">

                <ImageView
                    android:id="@+id/reward_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_reward_medal"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/space_15"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/you_have_earned_120_stars"
                        android:textColor="@color/colorWhite"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 120 "
                        android:textColor="@color/colorOrange"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stars"
                        android:textColor="@color/colorWhite"
                        android:textSize="14dp"
                        />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/space_10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stars_earned"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/space_1"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stars_claimed"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/colorGray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_parenting"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginStart="@dimen/space_20"
                android:textSize="14dp"
                android:textStyle="bold"
                />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/parenting_offers_view_pager"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom= "@dimen/space_10"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_finance"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginStart="@dimen/space_20"
                android:textSize="14dp"
                android:textStyle="bold"
                />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/finance_offers_view_pager"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom= "@dimen/space_10"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/utilized_your_reward_points"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginStart="@dimen/space_20"
                android:textSize="14dp"
                android:textStyle="bold"
                />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/utilize_your_offers_view_pager"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom= "@dimen/space_10"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        </LinearLayout>

    </ScrollView>

</layout>
